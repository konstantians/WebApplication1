@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><label asp-for="Id"></label></div>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><label asp-for="Email"></label></div>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><label asp-for="UserName"></label></div>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><label asp-for="City"></label></div>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-primary" asp-controller="administration" asp-action="listusers">Cancel</a>
    <div class="card mt-3">
        <div class="card-header">
            <h2>User Roles</h2>
        </div>
        <div class="card-body">
            @{
                if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <div class="card-title">@role</div>
                    }
                }
                else
                {
                    <div class="card-title">None at the moment</div>
                }
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="administration" asp-action="manageuserroles" asp-route-userid="@Model.Id" style="width:auto;">Manage Roles</a>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">
            <h2>User Claims</h2>
        </div>
        <div class="card-body">
            @{
                if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <div class="card-title">@claim</div>
                    }
                }
                else
                {
                    <div class="card-title">None at the moment</div>
                }
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="administration" asp-action="manageuserclaims" asp-route-userid="@Model.Id" style="width:auto;">Manage Claims</a>
        </div>
    </div>
</form>
